{
  "name": "smarty-pants-json-api-tester",
  "displayName": "Smarty Pants JSON API Tester",
  "description": "JSON API testing tool with Monaco editor, Vim mode, and command execution",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:commandOutputHover.executeCommand",
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commandOutputHover.executeCommand",
        "title": "Execute Command with Selection"
      },
      {
        "command": "commandOutputHover.showFullOutput",
        "title": "Show Full Command Output"
      },
      {
        "command": "commandOutputHover.postJsonToUrl",
        "title": "Post JSON (Custom URL)",
        "icon": "$(edit)"
      },
      {
        "command": "commandOutputHover.postJsonToUrlDefault",
        "title": "Post JSON (Default URL)",
        "icon": "$(play)"
      },
      {
        "command": "commandOutputHover.openJsonEditor",
        "title": "Open JSON API Tester",
        "icon": "$(globe)"
      }
    ],
    "keybindings": [
      {
        "command": "commandOutputHover.executeCommand",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorTextFocus"
      }
    ],
    "customEditors": [
      {
        "viewType": "commandOutputHover.jsonEditor",
        "displayName": "JSON API Tester",
        "selector": [
          {
            "filenamePattern": "*.json"
          }
        ],
        "priority": "option"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "commandOutputHover.openJsonEditor",
          "when": "resourceLangId == json && activeCustomEditorId != 'commandOutputHover.jsonEditor'",
          "group": "navigation@1"
        },
        {
          "command": "commandOutputHover.postJsonToUrlDefault",
          "when": "resourceLangId == json && activeCustomEditorId != 'commandOutputHover.jsonEditor'",
          "group": "navigation@2"
        },
        {
          "command": "commandOutputHover.postJsonToUrl",
          "when": "resourceLangId == json && activeCustomEditorId != 'commandOutputHover.jsonEditor'",
          "group": "navigation@3"
        }
      ]
    },
    "configuration": {
      "title": "Smarty Pants JSON API Tester",
      "properties": {
        "commandOutputHover.commandTemplate": {
          "type": "string",
          "default": "echo {{input}}",
          "description": "Shell command template. Use {{input}} as placeholder for selected text."
        },
        "commandOutputHover.shellType": {
          "type": "string",
          "enum": [
            "bash",
            "powershell"
          ],
          "default": "bash",
          "description": "Shell type to use for command execution."
        },
        "commandOutputHover.timeout": {
          "type": "number",
          "default": 30000,
          "description": "Command execution timeout in milliseconds."
        },
        "commandOutputHover.jsonPostUrl": {
          "type": "string",
          "default": "",
          "description": "Remote URL to POST JSON files to. Leave empty to disable."
        },
        "commandOutputHover.jsonPostMethod": {
          "type": "string",
          "enum": [
            "POST",
            "PUT"
          ],
          "default": "POST",
          "description": "HTTP method to use when posting JSON."
        },
        "commandOutputHover.jsonPostHeaders": {
          "type": "object",
          "default": {
            "Content-Type": "application/json"
          },
          "description": "Custom headers to include in the JSON POST request."
        },
        "commandOutputHover.enableVimMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable Vim keybindings in the JSON editor."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^18.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
